server {
	listen		80;
	server_name  	local.dev.clients;
	charset		utf-8;

	include global/restrictions.conf;
	include global/wp-proxy.conf;
}

server {
	listen			8080;
	server_name		local.dev.clients;
	charset			utf-8;
	root			/var/www/clients;
	set_real_ip_from	127.0.0.1;
        real_ip_header		X-Real-IP;

	include	global/restrictions.conf;
	include	global/wordpress.conf;
}
